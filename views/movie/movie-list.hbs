<div class="row mt-5 mb-5">
    <div class="col-6">
        <form action="/movie-search" method="POST">
            <div class="form-group">
                <input type="search" id="search" name="search" class="form-control" placeholder="Search again" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Search</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-12">

        <h4 class="mb-3 text-uppercase lead">{{search_term}}</h4>
        <ul class="list-unstyled">
            {{#each results}}
                <li class="media mb-4">
                    <a class="d-flex" href="/movie/detail/{{this.imdbID}}" role="button">
                        {{#contains this.Poster 'N/A' }}
                        {{else}}
                        <img src="{{this.Poster}}" class="mr-3 w-25 img-thumbnail" alt="...">
                        {{/contains}}
                        <div class="media-body">
                            <h5 class="mt-3 mb-1 text-body">{{this.Title}}</h5>
                            <ul class="list-group">
                                <li class="list-group-item text-secondary border-top-0 border-right-0 border-left-0"><span class="font-weight-bold">Year: </span>{{this.Year}}</li>
                                <li class="list-group-item text-secondary border-top-0 border-right-0 border-left-0"><span class="font-weight-bold">Type: </span>{{this.Type}}</li>
                            </ul>
                        </div>
                    </a>
                </li>
            {{else}}
                <p class="mb-5">Sorry, there were no results. Please search again.</p>
            {{/each}}
            
        </ul>

